<mvc:View controllerName="library.controller.Main"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m"
    xmlns:l="sap.ui.layout">
    <Page id="page" title="{i18n>title}">
        <content>
            <Table id="booksTable" mode="SingleSelect" >
                <columns>
                    <Column hAlign="Center">
                        <Text text="Title"/>
                    </Column>
                    <Column hAlign="Center">
                        <Text text="Author"/>
                    </Column>
                    <Column hAlign="Center">
                        <Text text="Genre"/>
                    </Column>
                    <Column hAlign="Center">
                        <Text text="Year of Publication"/>
                    </Column>
                </columns>
            </Table>
            <l:HorizontalLayout class="sapUiContentPadding"> 
                    <Button text="Add Book" press="onAddButton"></Button>
                    <Button text="Update Book" press="onUpdateButton"></Button>
            </l:HorizontalLayout>
        </content>
    </Page>
</mvc:View>
