<mvc:View controllerName="library.controller.Main"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m"
    xmlns:l="sap.ui.layout">
    <Page id="page" title="{i18n>title}">
        <content>
            <Table id="booksTable" selectionChange="onSelectedItem" mode="SingleSelect" >
                <columns>
                    <Column hAlign="Center">
                        <Text text="Title"/>
                    </Column>
                    <Column hAlign="Center">
                        <Text text="Author"/>
                    </Column>
                    <Column hAlign="Center">
                        <Text text="Genre"/>
                    </Column>
                    <Column hAlign="Center">
                        <Text text="Year of Publication"/>
                    </Column>
                </columns>
            </Table>
	        <l:VerticalLayout class="sapUiContentPadding" width="100%">
                <Label text="Title" labelFor="titleInput" design="Bold" />
                    <Input id="titleInput" required="true" />
                <Label text="Author" labelFor="authorInput" design="Bold" />
                    <Input id="authorInput" required="true" />
                <Label text="Genre" labelFor="genreInput" design="Bold" />
                    <Input id="genreInput" required="true" />
                <Label text="Year of Publication" labelFor="yearInput" design="Bold" />
                    <Input id="yearInput" required="true" />
                <l:HorizontalLayout class="sapUiContentPadding"> 
                    <Button text="Add Book" press="addBook"></Button>
                    <Button text="Update Book" press="updateBook"></Button>
                </l:HorizontalLayout>
            </l:VerticalLayout>
        </content>
    </Page>
</mvc:View>
