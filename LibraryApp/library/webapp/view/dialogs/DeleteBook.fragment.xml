<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" >
   <Dialog title="Confirmation" afterClose="onAfterCloseDeleteDialog">
        <Panel>
            <Text text="Are you sure you want to delete this item?"/>
        </Panel>
        <beginButton>
            <Button text="Yes" type="Emphasized" press="onDeleteDialog"/>
        </beginButton>
        <endButton>
            <Button text="No" press="onCloseDeleteDialog"/>
        </endButton>
   </Dialog>
</core:FragmentDefinition>