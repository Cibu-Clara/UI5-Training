<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" >
   <Dialog title="{i18n>Confirmation}" afterClose="onAfterCloseDeleteDialog">
        <Panel>
            <Text text="{i18n>Question1}"/>
        </Panel>
        <beginButton>
            <Button text="{i18n>Yes}" type="Emphasized" press="onDeleteDialog"/>
        </beginButton>
        <endButton>
            <Button text="{i18n>No}" press="onCloseDeleteDialog"/>
        </endButton>
   </Dialog>
</core:FragmentDefinition>