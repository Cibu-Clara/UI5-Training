<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" >
   <Dialog title="Update Book" contentWidth="550px" contentHeight="230px" afterClose="onAfterCloseUpdateDialog">
        <content>
        <Panel>
        <Label text="Title" labelFor="titleInput" design="Bold" />
            <Input id="titleInput" required="true" />
        <Label text="Author" labelFor="authorInput" design="Bold" />
            <Input id="authorInput" required="true" />
        <Label text="Genre" labelFor="genreInput" design="Bold" />
            <Input id="genreInput"/>
        <Label text="Year of Publication" labelFor="yearInput" design="Bold" />
            <Input id="yearInput"/>
        </Panel>
        </content>
        <beginButton>
            <Button text="Update" type="Emphasized" press="onUpdateDialog"/>
        </beginButton>
        <endButton>
            <Button text="Close" press="onCloseUpdateDialog"/>
        </endButton>
   </Dialog>
</core:FragmentDefinition>