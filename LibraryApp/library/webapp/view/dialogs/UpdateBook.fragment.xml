<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" >
   <Dialog title="{i18n>Update-Book}" contentWidth="550px" contentHeight="230px" afterClose="onAfterCloseUpdateDialog">
        <content>
        <Panel>
        <Label text="{i18n>Title}" labelFor="titleInput" design="Bold" />
            <Input id="titleInput" required="true" />
        <Label text="{i18n>Author}" labelFor="authorInput" design="Bold" />
            <Input id="authorInput" required="true" />
        <Label text="{i18n>Genre}" labelFor="genreInput" design="Bold" />
            <Input id="genreInput"/>
        <Label text="{i18n>Year}" labelFor="yearInput" design="Bold" />
            <Input id="yearInput"/>
        </Panel>
        </content>
        <beginButton>
            <Button text="{i18n>Update}" type="Emphasized" press="onUpdateDialog"/>
        </beginButton>
        <endButton>
            <Button text="{i18n>Close}" press="onCloseUpdateDialog"/>
        </endButton>
   </Dialog>
</core:FragmentDefinition>